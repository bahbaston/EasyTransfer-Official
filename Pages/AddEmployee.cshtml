
@page
@using easytransfer.Models @*namespace*@
@model AddEmployeeModel

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<div class="container">
    <h3>Add Employee</h3>
    <hr />
    <br />
    <form method="post">
        <div class="row">
            <div class="col-md-4">
                <label asp-for="EasyUser.fullname"></label>
                <input asp-for="EasyUser.fullname" class="form-control" />
                <span class="alert-danger" asp-validation-for="EasyUser.fullname"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label asp-for="EasyUser.username"></label>
                <input asp-for="EasyUser.username" class="form-control" />
                <span class="alert-danger" asp-validation-for="EasyUser.username"></span>
            </div>
        </div>
        <div class="row"> 
            <div class="col-md-4">
                <label asp-for="EasyUser.password"></label>
                <input asp-for="EasyUser.password" class="form-control" />
                <span class="alert-danger" asp-validation-for="EasyUser.password"></span>
            </div>
        </div>

        <br />
        <input type="submit" value="Save" class="btn btn-primary" />
        <a class="btn btn-default" href="/AllEmployee">Cancel</a>
    </form>
</div>
